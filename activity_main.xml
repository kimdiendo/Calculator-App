<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:textSize="40pt"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPlus"
                android:onClick ="operatorEvent"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="+"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:onClick ="operatorEvent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="-"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMultiple"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:onClick ="operatorEvent"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="*"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick ="operatorEvent"
                android:text="/"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAC"
                android:onClick="deleteall"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="AC"
                android:textColor="#B39DDB"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnNine"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="9"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="8"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="7"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="6"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="5"
                android:textColor="#B39DDB"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="4"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="3"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="2"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnOne"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="1"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:onClick="numberEvent"
                android:text="0"
                android:textColor="#B39DDB"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick ="operatorEvent"
                android:background="#673AB7"
                android:text="%"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDoc"
                android:layout_width="30pt"
                android:onClick="docEvent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="."
                android:textColor="#B39DDB"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="30pt"
                android:onClick="deleteEvent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="Delete"
                android:textColor="#B39DDB"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnEquality"
                android:layout_width="30pt"
                android:onClick="equatorEvent"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="#673AB7"
                android:text="="
                android:textColor="#B39DDB"
                android:textSize="20sp" />


        </TableRow>


    </TableLayout>


</LinearLayout>